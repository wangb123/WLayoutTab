<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">
    <!-- indicator -->
    <!-- 设置显示器颜色 -->
    <attr name="w_tab_indicator_color" format="color" />
    <!-- 设置显示器高度 -->
    <attr name="w_tab_indicator_height" format="dimension" />
    <!-- 设置显示器固定宽度 -->
    <attr name="w_tab_indicator_width" format="dimension" />
    <!-- 设置显示器margin,当indicator_width大于0,无效 -->
    <attr name="w_tab_indicator_margin_left" format="dimension" />
    <attr name="w_tab_indicator_margin_top" format="dimension" />
    <attr name="w_tab_indicator_margin_right" format="dimension" />
    <attr name="w_tab_indicator_margin_bottom" format="dimension" />
    <!-- 设置显示器圆角弧度-->
    <attr name="w_tab_indicator_corner_radius" format="dimension" />
    <!-- 设置显示器上方还是下方,只对圆角矩形有用-->
    <attr name="w_tab_indicator_gravity" format="enum">
        <enum name="TOP" value="48" />
        <enum name="BOTTOM" value="80" />
    </attr>
    <!-- 设置显示器为常规|三角形|背景色块|-->
    <attr name="w_tab_indicator_style" format="enum">
        <enum name="NORMAL" value="0" />
        <enum name="TRIANGLE" value="1" />
        <enum name="BLOCK" value="2" />
    </attr>
    <!-- 设置显示器长度与title一样长,只有在STYLE_NORMAL并且indicatorWidth小于零有效-->
    <attr name="w_tab_indicator_width_equal_title" format="boolean" />
    <!-- 设置显示器支持动画-->
    <attr name="w_tab_indicator_anim_enable" format="boolean" />
    <!-- 设置显示器动画时间-->
    <attr name="w_tab_indicator_anim_duration" format="integer" />
    <!-- 设置显示器支持动画回弹效果-->
    <attr name="w_tab_indicator_bounce_enable" format="boolean" />

    <!-- underline -->
    <!-- 设置下划线颜色 -->
    <attr name="w_tab_underline_color" format="color" />
    <!-- 设置下划线高度 -->
    <attr name="w_tab_underline_height" format="dimension" />
    <!-- 设置下划线上方还是下方-->
    <attr name="w_tab_underline_gravity" format="enum">
        <enum name="TOP" value="48" />
        <enum name="BOTTOM" value="80" />
    </attr>

    <!-- divider -->
    <!-- 设置分割线颜色 -->
    <attr name="w_tab_divider_color" format="color" />
    <!-- 设置分割线宽度 -->
    <attr name="w_tab_divider_width" format="dimension" />
    <!-- 设置分割线的paddingTop和paddingBottom -->
    <attr name="w_tab_divider_padding" format="dimension" />

    <!-- tab -->
    <!-- 设置tab的paddingLeft和paddingRight -->
    <attr name="w_tab_tab_padding" format="dimension" />
    <!-- 设置tab大小等分 -->
    <attr name="w_tab_tab_space_equal" format="boolean" />
    <!-- 设置tab固定大小 -->
    <attr name="w_tab_tab_width" format="dimension" />

    <!-- title -->
    <!-- 设置字体大小 -->
    <attr name="w_tab_textsize" format="dimension" />
    <!-- 设置字体选中颜色 -->
    <attr name="w_tab_textSelectColor" format="color" />
    <!-- 设置字体未选中颜色 -->
    <attr name="w_tab_textUnselectColor" format="color" />
    <!-- 设置字体加粗 -->
    <attr name="w_tab_textBold" format="enum">
        <enum name="NONE" value="0" />
        <enum name="SELECT" value="1" />
        <enum name="BOTH" value="2" />
    </attr>
    <!-- 设置字体全大写 -->
    <attr name="w_tab_textAllCaps" format="boolean" />
    <!--设置viewpager滑动动画-->
    <attr name="w_tab_smoothScroll" format="boolean" />

    <declare-styleable name="WTabLayout">
        <!-- indicator -->
        <attr name="w_tab_indicator_color" />
        <attr name="w_tab_indicator_height" />
        <attr name="w_tab_indicator_width" />
        <attr name="w_tab_indicator_margin_left" />
        <attr name="w_tab_indicator_margin_top" />
        <attr name="w_tab_indicator_margin_right" />
        <attr name="w_tab_indicator_margin_bottom" />
        <attr name="w_tab_indicator_corner_radius" />
        <attr name="w_tab_indicator_gravity" />
        <attr name="w_tab_indicator_style" />
        <attr name="w_tab_indicator_width_equal_title" />

        <!-- underline -->
        <attr name="w_tab_underline_color" />
        <attr name="w_tab_underline_height" />
        <attr name="w_tab_underline_gravity" />

        <!-- divider -->
        <attr name="w_tab_divider_color" />
        <attr name="w_tab_divider_width" />
        <attr name="w_tab_divider_padding" />

        <!-- tab -->
        <attr name="w_tab_tab_padding" />
        <attr name="w_tab_tab_space_equal" />
        <attr name="w_tab_tab_width" />

        <!-- title -->
        <attr name="w_tab_textsize" />
        <attr name="w_tab_textSelectColor" />
        <attr name="w_tab_textUnselectColor" />
        <attr name="w_tab_textBold" />
        <attr name="w_tab_textAllCaps" />

        <attr name="w_tab_smoothScroll" />

    </declare-styleable>

    <declare-styleable name="CommonTabLayout">
        <!-- indicator -->
        <attr name="w_tab_indicator_color" />
        <attr name="w_tab_indicator_height" />
        <attr name="w_tab_indicator_width" />
        <attr name="w_tab_indicator_margin_left" />
        <attr name="w_tab_indicator_margin_top" />
        <attr name="w_tab_indicator_margin_right" />
        <attr name="w_tab_indicator_margin_bottom" />
        <attr name="w_tab_indicator_corner_radius" />
        <attr name="w_tab_indicator_gravity" />
        <attr name="w_tab_indicator_style" />
        <attr name="w_tab_indicator_anim_enable" />
        <attr name="w_tab_indicator_anim_duration" />
        <attr name="w_tab_indicator_bounce_enable" />

        <!-- underline -->
        <attr name="w_tab_underline_color" />
        <attr name="w_tab_underline_height" />
        <attr name="w_tab_underline_gravity" />

        <!-- divider -->
        <attr name="w_tab_divider_color" />
        <attr name="w_tab_divider_width" />
        <attr name="w_tab_divider_padding" />

        <!-- tab -->
        <attr name="w_tab_tab_padding" />
        <attr name="w_tab_tab_space_equal" />
        <attr name="w_tab_tab_width" />

        <!-- title -->
        <attr name="w_tab_textsize" />
        <attr name="w_tab_textSelectColor" />
        <attr name="w_tab_textUnselectColor" />
        <attr name="w_tab_textBold" />
        <attr name="w_tab_textAllCaps" />

        <!-- icon -->
        <!-- 设置icon宽度 -->
        <attr name="w_tab_iconWidth" format="dimension" />
        <!-- 设置icon高度 -->
        <attr name="w_tab_iconHeight" format="dimension" />
        <!-- 设置icon是否可见 -->
        <attr name="w_tab_iconVisible" format="boolean" />
        <!-- 设置icon显示位置,对应Gravity中常量值 -->
        <attr name="w_tab_iconGravity" format="enum">
            <enum name="LEFT" value="3" />
            <enum name="TOP" value="48" />
            <enum name="RIGHT" value="5" />
            <enum name="BOTTOM" value="80" />
        </attr>
        <!-- 设置icon与文字间距 -->
        <attr name="w_tab_iconMargin" format="dimension" />

    </declare-styleable>

    <declare-styleable name="SegmentTabLayout">
        <!-- indicator -->
        <attr name="w_tab_indicator_color" />
        <attr name="w_tab_indicator_height" />
        <attr name="w_tab_indicator_margin_left" />
        <attr name="w_tab_indicator_margin_top" />
        <attr name="w_tab_indicator_margin_right" />
        <attr name="w_tab_indicator_margin_bottom" />
        <attr name="w_tab_indicator_corner_radius" />
        <attr name="w_tab_indicator_anim_enable" />
        <attr name="w_tab_indicator_anim_duration" />
        <attr name="w_tab_indicator_bounce_enable" />

        <!-- divider -->
        <attr name="w_tab_divider_color" />
        <attr name="w_tab_divider_width" />
        <attr name="w_tab_divider_padding" />

        <!-- tab -->
        <attr name="w_tab_tab_padding" />
        <attr name="w_tab_tab_space_equal" />
        <attr name="w_tab_tab_width" />

        <!-- title -->
        <attr name="w_tab_textsize" />
        <attr name="w_tab_textSelectColor" />
        <attr name="w_tab_textUnselectColor" />
        <attr name="w_tab_textBold" />
        <attr name="w_tab_textAllCaps" />

        <attr name="w_tab_bar_color" format="color" />
        <attr name="w_tab_bar_stroke_color" format="color" />
        <attr name="w_tab_bar_stroke_width" format="dimension" />

    </declare-styleable>

    <declare-styleable name="MsgView">
        <!-- 圆角矩形背景色 -->
        <attr name="mv_backgroundColor" format="color" />
        <!-- 圆角弧度,单位dp-->
        <attr name="mv_cornerRadius" format="dimension" />
        <!-- 圆角弧度,单位dp-->
        <attr name="mv_strokeWidth" format="dimension" />
        <!-- 圆角边框颜色-->
        <attr name="mv_strokeColor" format="color" />
        <!-- 圆角弧度是高度一半-->
        <attr name="mv_isRadiusHalfHeight" format="boolean" />
        <!-- 圆角矩形宽高相等,取较宽高中大值-->
        <attr name="mv_isWidthHeightEqual" format="boolean" />
    </declare-styleable>
</resources>